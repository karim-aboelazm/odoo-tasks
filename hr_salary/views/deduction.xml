<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <record id="deduction_view_form" model="ir.ui.view">
            <field name="name">deduction.form</field>
            <field name="model">hr_salary.deduction</field>
            <field name="arch" type="xml">
                <form string="deduction">
                    <sheet>
                        <group class="col-4">
                            <field name="amount"/>
                            <field name="deduct_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="deduction_view_tree" model="ir.ui.view">
            <field name="name">deduction.tree</field>
            <field name="model">hr_salary.deduction</field>
            <field name="arch" type="xml">
                <tree string="deduction">
                    <field name="amount"/>
                    <field name="deduct_id"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>